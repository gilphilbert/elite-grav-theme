{% extends 'partials/base.html.twig' %}

{% block hero %}
    {% for module in page.collection() if module.template == 'modular/hero' %}
        <div id="{{ module.menu|hyphenize }}"></div>
        {{ module.content|raw }}
    {% endfor %}
{% endblock %}

{% block body %}
    <section class="has-extra-wide-margins">
        <div class="container">
            <div class="columns">
                <div class="column is-12">
                    {{ page.content|raw }}
                </div>
            </div>
            {% for module in page.collection() if module.template != 'modular/hero' %}
                <div id="{{ module.menu|hyphenize }}"></div>
                {{ module.content|raw }}
            {% endfor %}
        </div>
    </section>
{% endblock %}
